  "name": "Sapphire Client",
  "description": "All features from DenaryLauncher in one mod!",
  "authors": [
    "DenaryDev"
  ],
  "contact": {
    "homepage": "https://github.com/SapphireMC/SapphireClient",
    "sources": "https://github.com/SapphireMC/SapphireClient.git",
    "issues": "https://github.com/SapphireMC/SapphireClient/issues"
  },

  "license": "GPL-3.0-only",
  "icon": "assets/sapphireclient/icon.png",

  "environment": "client",
  "entrypoints": {
