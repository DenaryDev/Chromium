{
  "schemaVersion": 1,
  "id": "sapphireclient",
  "version": "${version}",

  "name": "Sapphire Client",
  "description": "All features from DenaryLauncher in one mod!",
  "authors": [
    "DenaryDev"
  ],
  "contact": {
    "homepage": "https://github.com/SapphireMC/SapphireClient",
    "sources": "https://github.com/SapphireMC/SapphireClient.git",
    "issues": "https://github.com/SapphireMC/SapphireClient/issues"
  },

  "license": "GPL-3.0-only",
  "icon": "assets/sapphireclient/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "io.sapphiremc.client.SapphireClientMod"
    ],
    "modmenu": [
      "io.sapphiremc.client.compat.modmenu.ModMenuCompat"
    ]
  },
  "mixins": [
    "mixins.sapphireclient.json",
    "mixins.sapphireclient.compat.sodium.json",
    "mixins.sapphireclient.compat.iris.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": ">=0.45.0",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.vkontakte": "https://vk.com/denaryworld"
      },
      "badges": [ "client" ]
    }
  }
}
